        <hr />
        @Html.Label("Selecciona Tipo de tarjeta")
        <hr />
        <div class="col-md-4">
            <div class="row">
                @Html.RadioButton("TipoTarj", "Visa")Visa
                <img class="img-responsive" src="https://cdn.pixabay.com/photo/2017/08/10/14/02/visa-2623015_960_720.png" style="width:123px"/>
            </div>
            <div class="row">
                @Html.RadioButton("TipoTarj", "Mastercard")Mastercard
                <img class="img-responsive" src="https://e7.pngegg.com/pngimages/910/492/png-clipart-mastercard-logo-credit-card-visa-brand-mastercard-text-label.png" style="width:123px"/>
            </div>
            <div class="row">
                @Html.RadioButton("TipoTarj", "American Express")American Express
