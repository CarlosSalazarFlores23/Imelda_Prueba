@model TDV_Carlos.Models.Comentario

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutChat.cshtml";
    string estado = Model.estatus == 1 ? "Respuesta Enviada": "Sin Responder" ;
}
<br />
<br />
<div class="panel panel-success">
    <div class="panel-heading">
        <h2>Detalles</h2>
        <h4>Queja:</h4>
    </div>
    <div class="panel-body">
        <div class="row col-md-12 ">
            <table class="table table-striped custab">
                <thead>
                    <tr>
                        <th>
                            Titulo:
                        </th>
                        <th>
                            Descripción:
                        </th>
                        <th>
                            Fecha:
                        </th>
                        <th>
                            Cliente:
                        </th>
                        <th>
                            ID de venta:
                        </th>
                        <th>
                            Estado:
                        </th>
                    </tr>
                </thead>
                <tr class="success">
                    <td>
                        @Html.DisplayFor(model => model.titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.fecha.Day)/@Html.DisplayFor(model => model.fecha.Month)/@Html.DisplayFor(model => model.fecha.Year)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Usuarios.nombre) @Html.DisplayFor(model => model.Usuarios.apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.id_venta)
                    </td>
                    @if (/*estado == " Sin Responder"*/ Model.estatus==0)
                    {
                        <td>
                            Sin Responder
                        </td>
                    }
                    else {
                        <td>
                            Respuesta Enviada
                        </td>
                    }                    
                </tr>
            </table>
        </div>

        <div class="row">
            <div class="col-md-6">
                <h3>Detalles de  la venta</h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Especificaciones:
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                Fecha:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Venta.fecha_venta.Day)/@Html.DisplayFor(model => model.Venta.fecha_venta.Month)/@Html.DisplayFor(model => model.Venta.fecha_venta.Year)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Producto:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Venta.Productos.nombre)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Cantidad:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Venta.cantidad)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Precio de Venta:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Venta.precio_venta)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Estado de la Venta:
                            </td>
                            <td>
                                <p class="alert">
                                    Pagado
                                </p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-6">
                <h3>Datos del cliente</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Contacto:
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                Nombre:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Venta.Usuarios.nombre)  @Html.DisplayFor(model => model.Venta.Usuarios.apellidos)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                email:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Venta.Usuarios.email)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Telefono:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Venta.Usuarios.telefono)
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

<div>
    <a class='btn btn-info btn-xs' href="@Url.Action( "Edit", new { id = Model.id_cometario })"><span class="glyphicon glyphicon-edit"></span> Reponder</a>
    <a class='btn btn-warning btn-xs' href="@Url.Action("Index")"><span class="glyphicon glyphicon-step-backward"></span>Volver a la lista</a>
</div>
