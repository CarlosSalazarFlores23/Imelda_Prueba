@model IEnumerable<TDV_Carlos.Models.Subcategorias>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout Compras.cshtml";
}

<h2>Subcategorias</h2>

<p>
    @Html.ActionLink("Crear nueva Subcategoria", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nombre:")
        </th>
        <th>
            @Html.DisplayName("Descripción:")
        </th>
        <th>
            @Html.DisplayName("Imagen:")
        </th>
        <th>
            @Html.DisplayName("Categoria:")
        </th>
        <th>
            @Html.DisplayName("Estado:")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.imagen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categorias.nombre)            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estatus)
        </td>
        <td>
            @Html.ActionLink("Actualizar", "Edit", new { id=item.id_subcategoria }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id_subcategoria }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.id_subcategoria })
        </td>
    </tr>
}

</table>
